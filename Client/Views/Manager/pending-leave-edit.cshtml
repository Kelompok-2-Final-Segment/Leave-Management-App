@model Client.Models.EditStatusManagerModel;
@{
    ViewData["Page"] = "Edit Leave";
    Layout = "~/Views/Shared/_LayoutDashboardManager.cshtml";
}
<div class="row">
    <div class="card mb-4">
        <div class="card-header pb-0" bg-white>
            <h5>LEAVE APPLICATION DETAIL</h5>
        </div>
        <div class="card-body px-3 pt-0 pb-2">
            <form method="post" asp-action="ManageLeave">
                <div class="mb-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="EmployeeDetail.NIK" class="form-label">EMPLOYEE ID</label>
                            <input asp-for="EmployeeDetail.NIK" type="text" id="input-nik" class="form-control" value="@Model.EmployeeDetail.NIK" aria-label="EMPLOYEE ID" disabled>
                        </div>
                            <input asp-for="EmployeeDetail.ManagerGuid" value="@Model.EmployeeDetail.ManagerGuid" type="text" id="input-guid" val="" hidden>
                        <div class="col">
                            <label asp-for="EmployeeDetail.DepartmentName" class="form-label">DEPARTMENT</label>
                            <input asp-for="EmployeeDetail.DepartmentName" value="@Model.EmployeeDetail.DepartmentName" type="text" id="input-department" class="form-control" aria-label="DEPARTMENT" disabled>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="EmployeeDetail.FullName" class="form-label">FULL NAME</label>
                            <input asp-for="EmployeeDetail.FullName" value="@Model.EmployeeDetail.FullName" type="text" id="input-fullname" class="form-control"  aria-label="FULLNAME" disabled>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="EmployeeDetail.PhoneNumber" class="form-label">PHONE NUMBER</label>
                            <input asp-for="EmployeeDetail.PhoneNumber" value="@Model.EmployeeDetail.PhoneNumber" type="text" id="input-phone-number" class="form-control"  aria-label="NIK" disabled>
                        </div>
                        <div class="col">
                            <label asp-for="EmployeeDetail.Email" class="form-label">EMAIL ADDRESS</label>
                            <input asp-for="EmployeeDetail.Email" value="@Model.EmployeeDetail.Email" type="text" id="input-email" class="form-control" aria-label="FULLNAME" disabled>
                        </div>
                    </div>
                </div>

                <hr class="bg-danger border-2 border-top border-secondary" />
                <div class="mb-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="EmployeeDetail.CreatedDate" class="form-label">APPLY DATE</label>
                            <input asp-for="EmployeeDetail.CreatedDate" value="@Model.EmployeeDetail.CreatedDate" type="text" id="input-apply-date" class="form-control"  aria-label="NIK" disabled>
                        </div>
                        <div class="col">
                            <label asp-for="EmployeeDetail.LeaveName" class="form-label">TYPE</label>
                            <input asp-for="EmployeeDetail.LeaveName" value="@Model.EmployeeDetail.LeaveName" type="text" id="input-type" class="form-control"  aria-label="FULLNAME" disabled>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <div class="row">
                        <div class="col">
                            <label asp-for="EmployeeDetail.StartDate" class="form-label">START DATE</label>
                            <input asp-for="EmployeeDetail.StartDate" type="text" id="input-start-date" value="@Model.EmployeeDetail.StartDate" class="form-control"  aria-label="NIK" disabled>
                        </div>
                        <div class="col">
                            <label asp-for="EmployeeDetail.EndDate"  class="form-label">END DATE</label>
                            <input asp-for="EmployeeDetail.EndDate" value="@Model.EmployeeDetail.EndDate"  type="text" id="input-end-date" class="form-control"  aria-label="FULLNAME" disabled>
                        </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label asp-for="EmployeeDetail.Description" class="form-label">DESCRIPTION</label>
                    <textarea asp-for="EmployeeDetail.Description" id="input-description" class="form-control" aria-label="With textarea" disabled>Description</textarea>
                </div>
                <input asp-for="EditLeave.Guid" value="@Model.EmployeeDetail.LeaveGuid" type="text" id="input-guid" val="" hidden>
                <div class="mb-2">
                    <label class="form-label">SET STATUS</label>
                    <select asp-for="EditLeave.Status" class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-status">
                        <option>Select Leave Status</option>
                        <option value="2">Approve</option>
                        <option value="1">Reject</option>
                    </select>
                    <span asp-validation-for="EditLeave.Status" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="EditLeave.Remarks" class="form-label">REMARK</label>
                    <textarea asp-for="EditLeave.Remarks" id="input-admin-remark" class="form-control" aria-label="With textarea" placeholder="Remarks"></textarea>
                    <span asp-validation-for="EditLeave.Remarks" class="text-danger"></span>
                </div>
                <div class=" mb-0 pb-0">
                    <a asp-action="ManagePendingLeaves" class="btn btn-secondary" data-bs-dismiss="modal">Back</a>
                    <button type="submit" id="button-save" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {

}
