@using Client.Utilities;
@model API.DTOs.Managers.DashboardManagerDto;
@{
    ViewData["Page"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardManager.cshtml";
    string format = "dd - MM - yyyy";
    
}


<!-- Top Widget -->
<div class="row">
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">All Leave</p>
                            <h5 class="font-weight-bolder">
                                @Model.AllLeave
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                            <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Pending Leave</p>
                            <h5 class="font-weight-bolder">
                                @Model.PendingLeaves
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                            <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">All Employee</p>
                            <h5 class="font-weight-bolder">
                                @Model.AllEmployee
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                            <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Department</p>
                            <h5 class="font-weight-bolder">
                                @Model.DepartmentName
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                            <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bottom Widget-->
<div class="row mt-4">
    <div class="col-lg-12 mb-lg-0 mb-4">
        <div class="card ">
            <div class="card-header pb-0 p-3">
                <div class="d-flex justify-content-between">
                    <h6 class="mb-2">Recent Leave</h6>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center ">
                    <thead>
                        <tr>
                            <th class="text-center">NIK</th>
                            <th class="text-center">Full Name</th>
                            <th class="text-center">Leave Type</th>
                            <th class="text-center">Requested Date</th>
                            <th class="text-center">Start Date</th>
                            <th class="text-center">End Date</th>
                            <th class="text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentLeave != null)
                        {
                            @foreach (var item in Model.RecentLeave)
                            {
                                <tr>
                                    <td>
                                        <div class="text-center">
                                            <h6 class="text-sm mb-0">@item.NIK</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h6 class="text-sm mb-0">@item.FullName</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="text-center">
                                            <h6 class="text-sm mb-0">@item.LeaveName</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class=" text-center">
                                            <h6 class="text-sm mb-0">@item.CreatedDate.ToString(format)</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class=" text-center">
                                            <h6 class="text-sm mb-0">@item.StartDate.ToString(format)</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class=" text-center">
                                            <h6 class="text-sm mb-0">@item.EndDate.ToString(format)</h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class=" text-center">
                                            @Html.Raw(StatusHandler.ConvertStatus(item.Status))
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td class="text-center">
                                    <h2> Data Not Found</h2>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>