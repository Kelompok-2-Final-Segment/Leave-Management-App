@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutDashboardStaff.cshtml";
}

<div class="card mb-4">
    <div class="container-fluid">
        <div class="card-header pb-0 ps-0" bg-white>
            <h5>PROFILE</h5>
        </div>
            <div class="profile-item">
                <label for="nik" class="form-label">NIK</label>
                <span id="nik" class="form-control"></span>
            </div>

            <div class="profile-item">
                <label for="name" class="form-label">Name</label>
                <span id="name" class="form-control"></span>
            </div>

            <div class="profile-item">
                <label for="birthdate" class="form-label">Birth Date</label>
                <span id="birthdate" class="form-control"></span>
            </div>

            <div class="profile-item">
                <label for="gender" class="form-label">Gender</label>
                <span id="gender" class="form-control"></span>
            </div>

            <div class="profile-item">
                <label for="email" class="form-label">Email</label>
                <span id="email" class="form-control"></span>
            </div>

            <div class="profile-item">
                <label for="phone" class="form-label">Phone Number</label>
                <span id="phone" class="form-control"></span>
            </div>

        <div class="profile-item mb-4">
                <label for="department" class="form-label">Department</label>
                <span id="department" class="form-control"></span>
            </div>
        </div>
    </div>

