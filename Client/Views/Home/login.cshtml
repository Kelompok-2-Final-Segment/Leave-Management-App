@model API.DTOs.Accounts.LoginDto
@{
    ViewData["Title"] = "Login - Leaves System Management";
    Layout = "~/Views/Shared/_LayoutGeneralManager.cshtml";
}

<section>
    <div class="page-header min-vh-100">
        <div class="container">
            <div class="row">
                <div class="col-xl-5 col-lg-5 col-md-7 d-flex flex-column mx-lg-0 mx-auto">
                    <div class="card card-plain">
                        <div class="mb-3">
                            <img src="~/dashboard/assets/img/login-header-logo.png" class="w-100" alt="Login">
                        </div>
                        <div class="card-header pb-0 text-start">
                            <h4 class="font-weight-bolder">Login</h4>
                            <p class="mb-0">Enter your email and password to access system</p>
                        </div>
                        <div class="card-body">
                            <form role="form" asp-action="LoginClient">
                                <div class="mb-3">
                                    <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Email" aria-label="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Password" aria-label="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Remember me</label>
                                    </div>
                                    <div class="form-check">
                                        <a href="~/forgotpassword" class="text-primary">Forgot Password?</a>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Sign in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-6 d-lg-flex d-none h-100 my-auto pe-0 position-absolute top-0 end-0 text-center justify-content-center flex-column">
                    <div class="position-relative bg-gradient-primary h-50 w-80 m-3 px-7 border-radius-lg d-flex flex-column justify-content-center overflow-hidden"
                         style="background-image: url('/dashboard/assets/img/bg2.png');background-size: cover;">
                        <span class="mask bg-gradient-primary opacity-6"></span>
                        <h4 class="mt-5 text-white font-weight-bolder position-relative">"Focus on being productive instead of busy."</h4>
                        <p class="text-white position-relative">– Tim Ferriss, American entrepreneur</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

