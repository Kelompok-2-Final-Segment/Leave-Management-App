@model API.DTOs.Accounts.ChangePasswordDto
@{
    ViewData["Title"] = "changepassword";
    Layout = "~/Views/Shared/_LayoutGeneralManager.cshtml";
}

<hr>
<hr>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-body text-center">
                    <h3><i class="fa fa-lock fa-4x"></i></h3>
                    <h2 class="text-center">Change Password</h2>
                    <p>Enter the OTP and your new password</p>
                    <div class="panel-body">
                        <form class="form">
                            <fieldset>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input id="otpInput" placeholder="OTP" class="form-control" type="text" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input id="passwordInput" placeholder="New Password" class="form-control" type="password" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="input-group">
                                        <input id="confirmPasswordInput" placeholder="Confirm Password" class="form-control" type="password" required>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input class="btn btn-lg btn-primary btn-block" value="Change Password" type="submit">
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>