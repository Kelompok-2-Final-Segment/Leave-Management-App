@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardAdmin.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0" bg-white>
                <h3>Pending Leave</h3>
            </div>
            <div class="card-body px-3 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table table-striped" id="table-pending-leave">
                        <thead>
                            <tr>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">No.</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Apply Date</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Employee</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">NIK</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Leave Type</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Leave Date</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Status</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Employee Modal-->
<div class="modal fade" id="modal-pending-leave" tabindex="-1" aria-labelledby="modal-pending-leave" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">LEAVE APPLICATION DETAIL</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="Add">
                    <div class="mb-2">
                        <div class="row">
                            
                            <div class="col">
                                <label class="form-label">FULL NAME</label>
                                <input type="text" id="input-fullname" class="form-control" value="FULL NAME" aria-label="FULLNAME" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="row">
                            
                            <div class="col">
                                <label class="form-label">PHONE NUMBER</label>
                                <input type="text" id="input-nik" class="form-control" value="PHONE NUMBER" aria-label="NIK" disabled>
                            </div>
                            <div class="col">
                                <label class="form-label">EMAIL ADDRESS</label>
                                <input type="text" id="input-fullname" class="form-control" value="EMAIL ADDRESS" aria-label="FULLNAME" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">DEPARTMENT</label>
                        <input type="text" id="input-department" class="form-control" value="DEPARTMENT" aria-label="DEPARTMENT" disabled>

                    </div>
                    <hr class="bg-danger border-2 border-top border-secondary" />
                    <div class="mb-2">
                        <div class="row">
                            <div class="col">
                                <label class="form-label">APPLY DATE</label>
                                <input type="text" id="input-apply-date" class="form-control" value="APPLY DATE" aria-label="NIK" disabled>
                            </div>
                            <div class="col">
                                <label class="form-label">TYPE</label>
                                <input type="text" id="input-leave-type" class="form-control" value="LEAVE TYPE" aria-label="FULLNAME" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <div class="row">
                            <div class="col">
                                <label class="form-label">START DATE</label>
                                <input type="text" id="input-apply-date" class="form-control" value="START DATE" aria-label="NIK" disabled>
                            </div>
                            <div class="col">
                                <label class="form-label">END DATE</label>
                                <input type="text" id="input-leave-type" class="form-control" value="END DATE" aria-label="FULLNAME" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="input-hiring-date" class="form-label">DESCRIPTION</label>
                        <textarea class="form-control" aria-label="With textarea" disabled>Description</textarea>
                    </div>
                    <div class="mb-2">
                        <label for="input-hiring-date" class="form-label">SET LEAVE STATUS</label>
                    </div>
                    <div class="mb-2">
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Leave Status</option>
                            <option value="0">Approve</option>
                            <option value="1">Reject</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label for="input-hiring-date" class="form-label">REMARK</label>
                        <textarea class="form-control" aria-label="With textarea" placeholder="Remark"></textarea>
                    </div>
                    <div class="modal-footer mb-0 pb-0">
                        <button type="button" class="btn btn-secondary mb-0" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" id="button-create" class="btn btn-primary mb-0">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin/PendingPage.js" asp-append-version="true"></script>
}