@using Client.Models;

@model EmployeeCombinedModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardAdmin.cshtml";
}

<div class="row">
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">All Employee</p>
                            <h5 class="font-weight-bolder">
                                8
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-danger shadow-danger text-center rounded-circle">
                            <i class="ni ni-world text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body p-3">
                <div class="row">
                    <div class="col-8">
                        <div class="numbers">
                            <p class="text-sm mb-0 text-uppercase font-weight-bold">Department</p>
                            <h5 class="font-weight-bolder">
                                8
                            </h5>
                        </div>
                    </div>
                    <div class="col-4 text-end">
                        <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                            <i class="ni ni-paper-diploma text-lg opacity-10" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0" bg-white>
                <h3>Manage Employee</h3>
            </div>
            <div class="card-body px-3 pt-0 pb-2">
                <div class="table-responsive p-0">
                        <table class="table table-striped" id="table-employee">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">No.</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">NIK</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Full Name</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Gender</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Role</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Department</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Employee Modal-->
<div class="modal fade" id="modal-create" tabindex="-1" aria-labelledby="modal-create" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="CreateEmployee">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col">
                                <input type="text" asp-for="RegisterEmployee.FirstName" id="input-firstname" class="form-control" placeholder="FIRST NAME" aria-label="First name">
                            </div>
                            <div class="col">
                                <input type="text" asp-for="RegisterEmployee.LastName" id="input-lastname" class="form-control" placeholder="LAST NAME" aria-label="Last name">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="input-birthdate" class="form-label">BIRTHDATE</label>
                        <input type="date" asp-for="RegisterEmployee.BirthDate" class="form-control" id="input-birthdate" placeholder="BIRTHDATE">
                    </div>
                    <div class="mb-3">
                        <label for="input-hiring-date" class="form-label">HIRING DATE</label>
                        <input type="date" asp-for="RegisterEmployee.HiringDate" class="form-control" id="input-hiring-date" placeholder="HIRING DATE">
                    </div>
                    <div class="mb-3">
                        <select asp-for="RegisterEmployee.Gender" class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Gender</option>
                            <option value="1">Male</option>
                            <option value="0">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="email" asp-for="RegisterEmployee.Email" class="form-control" id="input-email" placeholder="EMAIL ADDRESS">
                    </div>
                    <div class="mb-3">
                        <input type="text" asp-for="RegisterEmployee.PhoneNumber" class="form-control" id="input-phone-number" placeholder="PHONE NUMBER">
                    </div>
                    <div class="mb-3">
                        <select asp-for="RegisterEmployee.RoleName" class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Role</option>
                            <option value="Staff">Staff</option>
                            <option value="Manager">Manager</option>
                            <option value="Admin">Administrator / HR</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <select asp-for="RegisterEmployee.DepartmentName" class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Department</option>
                            <option value="Sales and Marketing">Sales and Marketing</option>
                            <option value="HR">Human Resources</option>
                            <option value="IT">Information Technology</option>
                            <option value="Finance">Finance</option>
                            <option value="Customer Support">Customer Support</option>

                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="RegisterEmployee.Password" id="input-password" class="form-control" placeholder="PASSWORD" aria-describedby="passwordHelpBlock">
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="RegisterEmployee.ConfirmPassword" id="input-confirm-password" class="form-control" placeholder="CONFIRM PASSWORD" aria-describedby="passwordHelpBlock">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" id="button-create" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Employee Modal -->
<div id="modal-delete" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure to delete this employee?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="delete-form" type="post" asp-action="Delete">
                <input id="delete-form-input" hidden />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin/AdminManageEmployee.js" asp-append-version="true"></script>
}