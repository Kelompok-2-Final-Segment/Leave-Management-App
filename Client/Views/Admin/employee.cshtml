@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_LayoutDashboardAdmin.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0" bg-white>
                <h6>Manage Employee</h6>
            </div>
            <div class="card-body px-3 pt-0 pb-2">
                <div class="table-responsive p-0">
                        <table class="table table-striped" id="table-employee">
                            <thead>
                                <tr>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">No.</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">NIK</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Full Name</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Gender</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Email</th>
                                <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Role</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Department</th>
                                    <th scope="col" class="text-uppercase text-secondary text-sm font-weight-bolder opacity-10">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Employee Modal-->
<div class="modal fade" id="modal-create" tabindex="-1" aria-labelledby="modal-create" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Employee</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="Add">
                    <div class="mb-3">
                        <div class="row">
                            <div class="col">
                                <input type="text" id="input-firstname" class="form-control" placeholder="FIRST NAME" aria-label="First name">
                            </div>
                            <div class="col">
                                <input type="text" id="input-lastname" class="form-control" placeholder="LAST NAME" aria-label="Last name">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="input-birthdate" class="form-label">BIRTHDATE</label>
                        <input type="date" class="form-control" id="input-birthdate" placeholder="BIRTHDATE">
                    </div>
                    <div class="mb-3">
                        <label for="input-hiring-date" class="form-label">HIRING DATE</label>
                        <input type="date" class="form-control" id="input-hiring-date" placeholder="HIRING DATE">
                    </div>
                    <div class="mb-3">
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Gender</option>
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="email" class="form-control" id="input-email" placeholder="EMAIL ADDRESS">
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="input-phone-number" placeholder="PHONE NUMBER">
                    </div>
                    <div class="mb-3">
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Role</option>
                            <option value="0">Staff</option>
                            <option value="1">Manager</option>
                            <option value="2">Administrator / HR</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="select-gender">
                            <option>Select Department</option>
                            <option value="0">Finance</option>
                            <option value="1">IT</option>
                            <option value="2">Marketing</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <input type="password" id="input-password" class="form-control" placeholder="PASSWORD" aria-describedby="passwordHelpBlock">
                        <div id="passwordHelpBlock" class="form-text">
                            Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                        </div>
                    </div>
                    <div class="mb-3">
                        <input type="password" id="input-confirm-password" class="form-control" placeholder="CONFIRM PASSWORD" aria-describedby="passwordHelpBlock">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" id="button-create" class="btn btn-primary">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Employee Modal -->
<div id="modal-delete" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure to delete this employee?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="delete-form" type="post" asp-action="Delete">
                <input id="delete-form-input" hidden />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/admin.js" asp-append-version="true"></script>
}