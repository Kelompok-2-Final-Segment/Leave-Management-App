@{
    ViewData["Title"] = "RequestLeave";
    Layout = "~/Views/Shared/_LayoutDashboardEmployee.cshtml";
}



<section class="content">
    <div class="container-fluid">
        <div class="clearfix">
            <div class="pull-left">
                <h4 class="text-blue h4">STAFF FORM</h4>
                <p class="mb-20"></p>
            </div>
        </div>
        <form action="" method="POST" enctype="">
            <input type="text" value="" name="" hidden />
            <div class="form-group">
                <label for="alasan">Deskripsi</label>
                <textarea class="form-control"
                          id="alasan"
                          rows="3"
                          name="deskripsi"
                          required></textarea>
            </div>
            <div class="form-group">
                <label for="mulai">Mulai Cuti</label>
                <input type="date"
                       class="form-control"
                       id="mulai"
                       aria-describedby="mulai"
                       name="mulai"
                       required />
            </div>
            <div class="form-group">
                <label for="berakhir">Berakhir Cuti</label>
                <input type="date"
                       class="form-control"
                       id="berakhir"
                       aria-describedby="berakhir"
                       name="berakhir"
                       required />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>

